<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp">
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="物料导入"
        android:gravity="center"
        android:textSize="@dimen/dp16"
        android:textColor="@color/black"
        />
    <com.qmuiteam.qmui.widget.QMUILoadingView
        android:id="@+id/loading"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:qmui_loading_view_size="22dp"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/tv_material"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="料号：310389721214"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:id="@+id/edit_sn"
        app:layout_constraintTop_toBottomOf="@+id/tv_material"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/edit_bg"
        android:layout_marginTop="10dp"
        android:hint="扫描物料号"
        android:gravity="center_vertical"
        android:textSize="@dimen/dp14"
        android:textColor="@color/black"
        android:paddingLeft="5dp"
        android:imeOptions="actionSearch"
        android:lines="1"
        android:singleLine="true"
        />
    <TextView
        android:id="@+id/tv_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_sn"
        tools:text="正在请求"
        android:textSize="@dimen/dp14"
        android:textColor="@color/grey5"
        android:gravity="center_vertical"
        />
    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="50dp"
        android:layout_height="26dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_progress"
        app:layout_constraintRight_toLeftOf="@+id/tv_sure"
        android:layout_marginTop="10dp"
        android:text="取消"
        android:textSize="@dimen/dp16"
        android:textColor="@color/white"
        android:background="@drawable/submit"
        android:gravity="center"
        android:layout_marginRight="10dp"
        />
    <TextView
        android:id="@+id/tv_sure"
        android:layout_width="50dp"
        android:layout_height="26dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_progress"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:text="确定"
        android:textSize="@dimen/dp16"
        android:textColor="@color/white"
        android:background="@drawable/submit"
        android:gravity="center"

        />
</android.support.constraint.ConstraintLayout>